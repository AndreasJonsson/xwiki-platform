<div id="addnewgroup">
<form method="post" onsubmit="return false;" class="xform">
<dl>
<dt>
<label for="newgroupi">$services.localization.render('rightsmanager.createnewgroup')</label>
</dt>
<dd>
<input type="text" name="newgroup" value="" id="newgroupi">
</dd>
</dl>
<div class="buttons">
<span class="buttonwrapper"><input class="button" type="submit" value="Create group" onclick="new Ajax.Request(new XWiki.Document(this.form.newgroup.value, 'XWiki').getURL('save', 'form_token=$!services.csrf.token&template=XWiki.XWikiGroupTemplate'), { onFailure: function(transport) { alert('$services.localization.render("rightsmanager.groupexist")'.replace('__name__', $('newgroupi').value)); }, onSuccess: function(transport) { window.lb.lbSaveForm(); } });"></span>
<span class="buttonwrapper"><input class="button secondary" type="submit" name="formactioncancel" value="Cancel" onclick=" window.lb.lbHide(); window.lb.lbClearData(); return false;"></span>
</div>
</form>
</div>